{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": [
        "./frontend/components/*"
      ],
      "@/hooks/*": [
        "./frontend/hooks/*"
      ],
      "@/lib/*": [
        "./frontend/lib/*"
      ],
      "@/lib/utils": [
        "./frontend/lib/utils"
      ],
      "@/lib/auth-context": [
        "./frontend/lib/auth-context"
      ],
      "@/lib/auth": [
        "./backend/lib/auth"
      ],
      "@/lib/features": [
        "./backend/lib/features"
      ],
      "@/lib/data/*": [
        "./database/*"
      ],
      "@/locales/*": [
        "./locales/*"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}